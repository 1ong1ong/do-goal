.week_days {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 10rpx;
}

.text-container {
  width: 60rpx;
  height: 60rpx;
}

.circle-img {
  background-color: #1989fa;
  border-radius: 200rpx;
  height: 60rpx;
  width: 60rpx;
  line-height: 70rpx;
}

.circle-text {
  font-size: 28rpx;
  font-family: Microsoft YaHei;
  font-weight: bold;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: rgba(145, 145, 145);
}

.point {
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 8rpx;
  background-color: #1989fa;
}

.share_btn_border {
  height: 160rpx;
  width: 100%;
  box-shadow: 0rpx -5rpx 5rpx #e5e5e5;
  position: fixed;
  bottom: 0rpx;
  left: 0;
  background-color: white;
}
.share_btn {
  background-color: white;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  height: 100rpx;
}

.share_btn button {
  /* width: 40%; */
  width: 80%;
  border: none;
  background-color: #e23c1e;
  border-radius: 100rpx;
  color: white;
}

.share_btn button:first-child {
  padding-right: 20rpx;
}

.share_btn button:last-child {
  padding-left: 20rpx;
}



.model {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  background: rgba(0, 0, 0, 0.8);
  left: 0;
  top: 0; 
  padding-top: 30%;
}
 
.canvas{
  width: 320px;
  height: 320px;
  /* position: fixed; */
