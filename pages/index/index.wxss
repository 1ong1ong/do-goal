/* pages/index/index.wxss */

.container {
  height: 100%;
}

.header {
  position: fixed;
  top: 10rpx;
  height: 220rpx;
  padding: 0 20rpx;
}

.content {
  position: fixed;
  top: 250rpx;
  padding: 0 20rpx;
  overflow: auto;
}

.top-img {
  height: 110rpx;
  width: 100%;
}

.top-img image {
  width: 100%;
  height: 100%;
}

.week_info {
  border-radius: 10rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0rpx 4rpx 10rpx #e1e7ec;
  padding: 0 20rpx;
}

.week_days {
  flex: 5;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 10rpx;
}

.text-container {
  width: 60rpx;
  height: 60rpx;
}

.circle-img {
  background-color: #1989fa;
  border-radius: 200rpx;
  height: 60rpx;
  width: 60rpx;
  line-height: 70rpx;
}

.circle-text {
  font-size: 28rpx;
  font-family: Microsoft YaHei;
  font-weight: bold;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: rgba(145, 145, 145);
}

.point {
  width: 10rpx;
  height: 10rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 8rpx;
  background-color: #1989fa;
}

.perfect_day {
  flex: 1;
  width: 90rpx;
  height: 90rpx;
  margin-left: 0rpx;
  position: relative;
}

.perfect_day image {
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  right: 10rpx;
}

.perfect_day .text {
  position: absolute;
  right: 10rpx;
  width: 90rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  color: white;
  font-weight: bold;
}

.goal_list {
  margin-top: 20rpx;
}

.goal_icon {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.goal_title {
  /* font-weight: bold; */
  font-size: 30rpx;
}

.goal_right_icon {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.goal_add_btn {
  position: fixed;
  width: 40%;
  left: 30%;
  display: flex;
  justify-content: center;
}

.no_goal_tip {
  width: 100%;
  text-align: center;
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999;
}
