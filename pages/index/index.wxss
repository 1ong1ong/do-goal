/* pages/index/index.wxss */

.container {
  height: 100%;
  padding: 0 20rpx;
}

.top-img {
  height: 150rpx;
  width: 100%;
}
.top-img image{
   width: 100%;
  height: 100%;
}
.week_info {
  border-radius: 10rpx;
  height: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  box-shadow: 0rpx 4rpx 10rpx #e1e7ec;
}

.week_days {
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
}

.perfect_day {
  width: 110rpx;
  height: 110rpx;
  margin-left: 20rpx;
  position: relative;
}

.perfect_day image {
  width: 100%;
  height: 100%;
  position: absolute;
}

.perfect_day .text {
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 110rpx;
  color: white;
  font-weight: bold;
}
.goal_list {
  margin-top: 20rpx;
}
.goal_icon {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.goal_title {
  font-weight: bold;
  font-size: 30rpx;
}
.goal_right_icon {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.goal_add_btn {
  position: fixed;
  bottom: 30rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}