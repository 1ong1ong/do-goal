/* pages/post-talking/index.wxss */

.container {
  padding: 30rpx;
}
.top {
  height: 100rpx;
  display: inline-flex;
}

.right {
  height: 100%;
  padding-left: 30rpx;
}

.name {
  font-weight: bold;
  height: 50rpx;
  line-height: 50rpx;
}

.auth {
  height: 50rpx;
  color: #999999;
  display: flex;
  align-items: center;
}

.btn{
  height: 40rpx;
  border: #999999 2rpx solid;
  line-height: 40rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  align-items: center;
  border-radius: 6rpx;
}

.btn text {
  font-size: 24rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.talking {
  min-height: 200rpx;
  color: #999999;
  margin-top: 10rpx;
}

.goal_des {
  height: 50rpx;
  display: inline-flex;
  line-height: 50rpx;
  width: 100%;
  position: relative;
  align-items: center;
}

.publish {
  position: absolute;
  right: 0;
  height: 60rpx;
  width: 100rpx;
  border-radius: 6rpx;
  background-color: #1989fa;
  color: white;
  line-height: 60rpx;
  text-align: center;
}

.van-cell {
  padding: 0 !important;
  margin: 0 !important;
}

.bottom {
  position: absolute;
  background-color: #f5f5f5;
  width: 100%;
  border-top: #e9e9e9 2rpx solid;
}

.bottom_btn {
  height: 90rpx;
  width: 100%;
  display: inline-flex;
  align-items: center;
  padding-left: 30rpx;
}

.bottom_nav_icon {
  margin-left: 20rpx;
  margin-right: 60rpx;
}