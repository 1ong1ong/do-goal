}

.user-info-btn::after {
  border: none;
  border-radius: 0;
}

.username {
  margin-left: 20rpx;
}
.up-content {
  display: flex;
  align-items: center;
  justify-content: start;
}

.up {
  /* font-weight: bold; */
  height: 60rpx;
  line-height: 60rpx;
  font-size: 44rpx;
  /* color: white; */
}
