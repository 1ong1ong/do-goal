  margin-left: 20rpx;
}
.down {
  /* color: white; */
  opacity: 0.8;
  font-size: 28rpx;
  margin-top:10rpx;
}

.more {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-right: 40rpx;
}

.content-down {
  background-color: white;
  padding: 0 40rpx;
  border-bottom: 1px solid #efefef;
  border-top: 1px solid #efefef;
  margin-top: 14rpx;
}

.contact-btn {
  text-align: left;
  font-size: 32rpx;
}

.cell-title {
  height: 40rpx;
  line-height: 40rpx;
  text-align: left;
  font-size: 32rpx;
  color: black;
}
.cell-icon {
  display: flex;
  align-items: center;
  justify-content: center;
}
button::after {
  border: none;
  background-color: transparent;
}

button {
  background-color: transparent;
  padding-left: 0;
  padding-right: 0;
  line-height: inherit;
}

button {
  border-radius: 0;
}

.button-hover {
  background-color: white;
