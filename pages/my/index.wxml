<view class="container">
  <view class="content-top">
    <view class="top-profile">
      <view class="avator">
        <view class="left">
          <van-image width="100%" height="100%" round src="{{avatarUrl}}" />
        </view>
        <view class="right">
          <button class="user-info-btn" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" wx:if="{{authorize == false}}">点击显示微信头像</button>
          <view class="username" wx:if="{{authorize == true}}">
            <view class="up">{{nickName}}</view>
            <view class="down"> {{country}} {{province}} {{city}}</view>
          </view>
          <!-- <view class="more">
