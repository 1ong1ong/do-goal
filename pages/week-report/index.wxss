/* pages/week-report/index.wxss */

.container {
  height: 100%;
  padding: 30rpx 20rpx;
  background-color: #F8F8F8;
}

.up {
  padding: 30rpx;
  box-shadow: 0rpx 4rpx 10rpx #e1e1e1;
  border-radius: 10rpx;
  background-color: white;
}

.date_title {
  height: 44rpx;
  background-image: linear-gradient(to right,  #D7201A , #EE5D44);
  color: white;
  font-size: 28rpx;
  line-height: 44rpx;
  letter-spacing: 8rpx;
  text-align: center;
  border-radius: 6rpx;
}

.week_line {
  height: 88rpx;
  padding: 10rpx 0;
  position: relative;
}

.week {
  position: absolute;
  font-size: 60rpx;
  font-weight: bold;
  color: #e23c1e;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  right: 0;
}

.divide_line {
  height: 26rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}

.line {
  height: 100%;
  width: 70%;
}

.font {
  height: 100%;
  width: 30%;
  font-size: 24rpx;
  line-height: 26rpx;
  padding-left: 26rpx;
}

.perfect_day {
  width: 220rpx;
  height: 220rpx;
  margin: 0 auto;
  margin-top: 50rpx;
  position: relative;
}

.perfect_day image {
  width: 100%;
  height: 100%;
  position: absolute;
}

.perfect_day .text {
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 220rpx;
  color: white;
  font-size: 50rpx;
  font-weight: bold;
}

.foot_text {
  text-align: center;
  margin-top: 20rpx;
  font-size: 28rpx;
}

.down {
  margin-top: 30rpx;
  padding: 30rpx;
  box-shadow: 0rpx 4rpx 10rpx #e1e1e1;
  border-radius: 10rpx;
  background-color: white;
}

.footer {
  margin-top: 30rpx;
  padding: 10rpx 30rpx;
  box-shadow: 0rpx 4rpx 10rpx #e1e1e1;
  border-radius: 10rpx;
  background-color: white;
}
