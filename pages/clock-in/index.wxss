/* pages/clock-in/index.wxss */

.content {
  width: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-color: #1989fa;
}

.nav_icon {
  margin-left: -10rpx;
}

.nav_bar_left {
  display: flex;
  align-items: center;
  justify-content: start;
  color: white;
  font-size: 38rpx;
}

.slide_btn {
  width: 100%;
  position: fixed;
  bottom: 100rpx;
  z-index: 10;
  display: flex;
  flex-wrap: wrap;
  justify-items: center;
  justify-content: center;
}

.clock-in-btn-container {
  position: relative;
}

.clock-in-wrapper {
  position: absolute;
  left: 0;
  top: 0;
  background-color: #e5e5e5;
  width: 200rpx;
  height: 200rpx;
  border-radius: 95rpx;
}

.clock-in-btn {
  position: absolute;
  left: 10;
  top: 10;
  background-color: #fb0;
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
}

.text {
  width: 100%;
  text-align: center;
  margin-top: 40rpx;
  color: white;
  font-size: 34rpx;
}
