/* pages/clock-in/index.wxss */

.content {
    width: 100%;
    background-repeat: no-repeat;
    background-size: 100% 100%;
}

.top {
    position: fixed;
    top: 120rpx;
    z-index: 10;
    width: 100%;
    font-size: 40rpx;
    height: 60rpx;
    line-height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: start;
}

.slide_btn {
    width: 100%;
    position: fixed;
    bottom: 200rpx;
    z-index: 10;
    display: flex;
    flex-wrap: wrap;
    justify-items: center;
    justify-content: center;
}

.text {
    width: 100%;
    text-align: center;
}
