/* pages/goal-list/index.wxss */

page {
  height: 100%;
  width: 100%;
}

.container {
  height: 100%;
  width: 100%;
}

.tabs_custom {
  height: 100%;
}

.tab_class {
  height: 100%;
}

.diy_tab_view {
  height: 100%;
  margin-bottom: 48rpx;
}

.foot_text {
  text-align: center;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.diy_btn {
  height: 100rpx;
  margin-top: 50rpx;
  padding: 30rpx;
}

.diy_btn button {
  font-size: 36rpx;
  font-weight: bold;
}

.tab_view {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.goal_icon {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.goal_title {
  font-size: 30rpx;
}

.goal_right_icon {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: start;
  align-items: center;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.van-tab--active {
  font-size: 38rpx !important;
}
