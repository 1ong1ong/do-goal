        </view>
        <view class="item">
          <view class="title">1/7</view>
          <view class="des">距离升级</view>
        </view>
      </view>
      <van-divider customStyle="margin-top:6rpx;"/>
      <view class="down">
        <view class="left">
          <view class="day" wx:for="{{charts}}" wx:for-item="chart" wx:key="index" bindtouchstart="touchPercent"
                data-index="{{index}}" bindtouchend="touchPercentEnd">
            <view class="tooltip"
                  style="background-color: {{current === index && chart.percent !==0 ?'#1989fa':'white'}}">
              <view class="text">{{chart.time}}</view>
              <div class="bottom">
                <view class="triangle"
                      style="background-color: {{current === index&& chart.percent !==0?'#1989fa':'white'}}"/>
              </div>
            </view>
            <view class="percent">
              <view class="inner" style="height:{{chart.percent}}%;"/>
              <view class="line" wx:if="{{current === index && chart.percent !==0}}"/>
            </view>
            {{chart.date}}
          </view>
        </view>
        <view class="right">
          <view class="up">09:32</view>
          <view class="down">05:32</view>
        </view>
      </view>
    </view>

