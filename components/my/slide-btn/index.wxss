.slider_content{
    position: relative;
    margin: 0 auto;
    box-sizing: border-box;
    background-color: #2e4eff;
    opacity: 0.5;
}

.slider {
    position: absolute;
    bottom: 10rpx;
    left: 10rpx;
    text-align: center;
    background-color: #7f7f7f;
    color: #fff;
    box-shadow: 0rpx 4rpx 6rpx 0rpx rgba(37, 114, 219, 0.3);
}
